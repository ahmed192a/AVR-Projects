#include <avr/io.h>
#include <util/delay.h>
#include <avr/interrupt.h>

#define time 10

unsigned char sec = 0;
unsigned char min = 0;
unsigned char hours = 0;

ISR(TIMER1_COMPA_vect){
	sec++;
	if(sec == 60){
		sec = 0;
		min++;
	}
	if(min == 60){
		min = 0;
		hours++;
	}
	if(hours == 24){
		hours = 0;
	}
}

void TIMER1_init(void){
	TCCR1A = (1<<FOC1A) | (1<<FOC1B);
	TCCR1B = (1<<WGM12) | (1<<CS12);
	TCNT1 = 0;
	OCR1A = 3907;
	TIMSK = (1<<OCIE1A);
	SREG = (1<<7);
}


int main(void){
	TIMER1_init();
	DDRD = 0xFF;
	PORTD = 0xFF;

	DDRC = 0x3F;
	PORTC = 0;

	_delay_ms(time);

	while(1){

		//DESPLAY

		PORTD = 0x20;
		PORTC = sec%10;
		_delay_ms(time);
		//PORTD = 0x10;
		PORTD = (1<<PORTD);
		PORTC =(sec)/10;
		_delay_ms(time);

		PORTD = 0x08;
		PORTC = min%10;
		_delay_ms(time);
		PORTD = 0x04;
		PORTC =(min)/10;
		_delay_ms(time);

		PORTD = 0x02;
		PORTC = hours%10;
		_delay_ms(time);
		PORTD = 0x01;
		PORTC =(hours)/10;
		_delay_ms(time);
	}
}
