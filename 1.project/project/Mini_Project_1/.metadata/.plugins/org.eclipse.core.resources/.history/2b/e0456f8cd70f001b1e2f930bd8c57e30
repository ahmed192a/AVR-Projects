#include <avr/io.h>
#include <util/delay.h>
#include <avr/interrupt.h>

void TIMER1_init(void){
	TCCR1A = (1<<FOC1A) | (1<<FOC1B);
	TCCR1B = (1<<WGM12) | (1<<CS12);
	TCNT1 = 0;
	OCR1A = 3907;
	TIMSK = (1<<OCIE1A);
	SREG = (1<<7);
}

void display(unsigned char data){
	PORTC = data%10;
	_delay_ms(30);
	PORTC =(data- (data%10) )/10;
	_delay_ms(30);
}

int main(void){
	TIMER1_init();
	DDRD = 0xFF;
	PORTD = 0x80;

	DDRC = 0x0F;
	PORTC = 0;
	unsigned char sec = 0;
	unsigned char min = 0;
	unsigned char hours = 0;
	_delay_ms(30);

	while(1){
		sec++;
		if(sec == 60){
			sec = 0;
			min++;
		}
		if(min == 60){
			min = 0;
			hours++;
		}
		if(hours == 24){
			hours = 0;
		}
		//DESPLAY
		display(sec);
		display(min);
		display(hours);
	}
}
